{
  "buildCommand": "cd client && pnpm install && pnpm build",
  "outputDirectory": "client/dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "env": {
    "VITE_APP_TITLE": "@pixellab_web_app_title",
    "VITE_APP_LOGO": "@pixellab_web_app_logo",
    "VITE_ANALYTICS_ENDPOINT": "@pixellab_web_analytics_endpoint",
    "VITE_ANALYTICS_WEBSITE_ID": "@pixellab_web_analytics_website_id"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
